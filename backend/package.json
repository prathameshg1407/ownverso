{
  "name": "@ownverso/backend",
  "version": "1.0.0",
  "description": "Ownverso Platform Backend - Own Your Universe",
  "author": "Ownverso Team",
  "license": "PROPRIETARY",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/index.ts",
    "dev:debug": "ts-node-dev --respawn --transpile-only --inspect -r tsconfig-paths/register src/index.ts",
    "build:check": "tsc --noEmit",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "clean": "npx rimraf dist",
    "build": "npm run clean && npx tsc -p tsconfig.build.json && npx tsc-alias -p tsconfig.build.json",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=unit --passWithNoTests",
    "test:integration": "jest --testPathPattern=integration --runInBand --passWithNoTests",
    "test:e2e": "jest --testPathPattern=e2e --runInBand --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests",
    "test:ci": "jest --ci --coverage --runInBand --passWithNoTests",
    "lint": "eslint \"src/**/*.ts\" \"tests/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" \"tests/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prisma:generate": "prisma generate",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:migrate:reset": "prisma migrate reset",
    "prisma:migrate:status": "prisma migrate status",
    "prisma:db:push": "prisma db push",
    "prisma:db:pull": "prisma db pull",
    "prisma:db:seed": "prisma db seed",
    "prisma:studio": "prisma studio",
    "prisma:format": "prisma format",
    "prisma:validate": "prisma validate",
    "db:setup": "npm run prisma:generate && npm run prisma:migrate:dev && npm run prisma:db:seed",
    "db:reset": "npm run prisma:migrate:reset && npm run prisma:db:seed",
    "docs:generate": "ts-node -r tsconfig-paths/register scripts/generate/generate-api-docs.ts",
    "cli": "ts-node -r tsconfig-paths/register src/cli/index.ts",
    "prepare": "husky install",
    "precommit": "lint-staged",
    "prepush": "npm run typecheck && npm run test:unit"
  },
  "dependencies": {
    "@fastify/auth": "^4.6.1",
    "@fastify/autoload": "^5.8.0",
    "@fastify/compress": "^7.0.3",
    "@fastify/cookie": "^9.3.1",
    "@fastify/cors": "^9.0.1",
    "@fastify/etag": "^5.2.0",
    "@fastify/formbody": "^7.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^8.0.1",
    "@fastify/multipart": "^8.3.0",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/redis": "^6.2.0",
    "@fastify/sensible": "^5.6.0",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^3.0.0",
    "@fastify/type-provider-typebox": "^4.0.0",
    "@prisma/client": "^5.14.0",
    "@sinclair/typebox": "^0.32.30",
    "@types/node": "^20.14.2",
    "argon2": "^0.40.1",
    "bullmq": "^5.7.8",
    "date-fns": "^3.6.0",
    "date-fns-tz": "^3.1.3",
    "dotenv": "^16.4.5",
    "fast-jwt": "^6.1.0",
    "fastify": "^4.27.0",
    "fastify-plugin": "^4.5.1",
    "ioredis": "^5.4.1",
    "lodash-es": "^4.17.21",
    "nanoid": "^5.0.7",
    "pino": "^9.1.0",
    "pino-pretty": "^11.1.0",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/lodash-es": "^4.17.12",
    "@typescript-eslint/eslint-plugin": "^7.12.0",
    "@typescript-eslint/parser": "^7.12.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-mock-extended": "^4.0.0",
    "lint-staged": "^15.2.5",
    "prettier": "^3.3.1",
    "prisma": "^5.14.0",
    "rimraf": "^5.0.7",
    "ts-jest": "^29.1.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0"
  },
  "prisma": {
    "seed": "ts-node -r tsconfig-paths/register prisma/seeds/index.ts"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write"
    ]
  }
}