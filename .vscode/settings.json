{
  // ---------- ðŸŒ± Existing User Settings ----------
  "terminal.integrated.commandsToSkipShell": [
    "terminal.integrated.commandsToSkipShell"
  ],
  "files.autoSave": "afterDelay",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",

  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/.next/**": true
  },

  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/build": true,
    "**/*.lock": true
  },

  "typescript.tsserver.maxTsServerMemory": 4096, // stronger TS checks

  "git.autorefresh": false,
  "git.enableSmartCommit": true,
  "git.autofetch": false,

  "editor.minimap.enabled": false,
  "files.exclude": {
    "**/node_modules": true,
    "**/.git": true
  },

  // ---------- ðŸ§  Required For Better Error Surfacing ----------

  // âœ” Use workspace TS version (never outdated global version)
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,

  // âœ” Show TypeScript errors proactively
  "typescript.validate.enable": true,

  // âœ” Show ESLint issues in real-time
  "eslint.run": "onType", 
  "eslint.validate": [
    "javascript", "javascriptreact",
    "typescript", "typescriptreact"
  ],
   "eslint.useFlatConfig": true,

  // âœ” Auto-fix on save: Prettier + ESLint + Import-ordering
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },

  // âœ” Display errors inline â€” easy to see everything
  "errorLens.enabled": true,
  "errorLens.fontWeight": "bold",
  "errorLens.enabledDiagnosticLevels": ["error", "warning"]
}
